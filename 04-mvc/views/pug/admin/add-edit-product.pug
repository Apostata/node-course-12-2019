extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    if product
        h1 Edit Product #{product.title}
    else
        h1 Add Product
    form.product-form(action=product ? "/admin/edit-product" : "/admin/add-product", method="POST")
        if product
            input#id(type="hidden", name="id", value=product.id)
        div.form-control
            label(for="title") Title
            input#title(type="text", name="title", value=product ? product.title : '')
        div.form-control
            label(for="imageUrl") Image URL
            input#imageUrl(type="text", name="imageUrl", value=product ? product.imageUrl : '')
        div.form-control
            label(for="price") Price
            input#price(type="number", name="price" step="0.01", value=product ? product.price : '')
        div.form-control
            label(for="description") Description
            textarea#description(type="text", name="description", rows=5) #{product ? product.description : ''}
    
            button.btn(type="submit") #{product ? 'Update Product' : 'Add Product'}